{% apply spaceless %}
    {% set hosts = craft.users.group("owners").all() %}
{% endapply %}
<footer>
    <div class="bg-repeat header-background relative footer-background">
        <div
            class="w-full md:w-auto bg-devmode-yellow text-devmode-pink inline-block py-4 px-8 absolute bottom-0 left-0">
            <div class="inline text-devmode-pink font-mono italic text-sm align-middle">
                // Copyright
                &copy;{{ now |date("Y") }} {% for host in hosts %}{{ host.fullName }}{% if not loop.last %}, {% endif %}{% endfor %}
                <br/>
                // Site by<a class="navbar-link font-mono text-sm" href="https://nystudio107.com/" target="_blank"
                             rel="noopener">nystudio107.com</a>designed by<a class="navbar-link font-mono text-sm"
                                                                             href="https://codemdd.io/" target="_blank"
                                                                             rel="noopener">codemdd.io</a></span>
                <br/>
                <br/>
                {% verbatim %}
                    <span class="whitespace-no-wrap not-italic">{{ footer.privacyPolicy }}</span> <span class="whitespace-no-wrap not-italic">{{ footer.termsOfService }}</span>
                {% endverbatim %}
            </div>
        </div>
    </div>
</footer>
